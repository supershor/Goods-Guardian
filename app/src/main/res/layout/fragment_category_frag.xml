<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"
    tools:context=".Category_frag">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cream"
        android:id="@+id/recyclerview"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/less_border_black_background_input_taker"
        android:text="Add New Item"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:id="@+id/add_items"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"/>



    <TextView
        android:contentDescription="@string/setting_text_view_in_with_500sdp_so_that_even_if_no_material_is_present_it_stll_fits_takes_up_the_whole_screen_making_it_slideable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_600sdp"
        android:visibility="invisible"
        android:text=""/>
</LinearLayout>